<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ismail.myapplication.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Dungeons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/normalDungeonsB"
                android:onClick="normalDungeonsButtonPressed" />

            <Button
                android:text="Heroic"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:id="@+id/heroicDungeonsB"
                android:onClick="heroicDungeonsButtonPressed" />

            <Button
                android:text="Mythic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mythicDungeonsB"
                android:layout_weight="1"
                android:onClick="mythicDungeonsButtonPressed" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dungeons"
            android:id="@+id/valueTV"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@android:color/holo_green_dark" />

    </LinearLayout>

</RelativeLayout>
